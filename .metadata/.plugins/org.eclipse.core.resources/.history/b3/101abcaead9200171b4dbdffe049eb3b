package msgcomm;
import java.net.DatagramPacket;
import java.net.InetAddress;
import java.net.MulticastSocket;
import java.io.IOException;

public class MulticastServer {
	private final static String BC_IP="224.5.6.88";
	private final static int BC_PORT = 11000;
	private final static int PACK_SIZE = 4096;
	public void initServer() throws IOException {
		InetAddress ip = InetAddress.getByName(BC_IP);
		MulticastSocket socket = new MulticastSocket(BC_PORT);
		socket.joinGroup(ip);
		socket.setLoopbackMode(false);
	}
}
